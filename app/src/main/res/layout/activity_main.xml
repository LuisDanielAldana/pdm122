<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luis Daniel Aldana de la Rosa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clon"
        app:layout_constraintVertical_bias="0.97" />

    <ImageView
        android:id="@+id/clon"
        android:layout_width="105dp"
        android:layout_height="151dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen" />

    <Button
        android:id="@+id/btnHideImage"
        android:layout_width="95dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:text="Ocultar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clon" />

    <Button
        android:id="@+id/btnShowImage"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="Mostrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHideImage" />

    <Button
        android:id="@+id/btnShowToast"
        android:layout_width="96dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowImage" />

    <Button
        android:id="@+id/btnSumTwoNumbersView"
        android:layout_width="185dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="Sumar dos numeros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowToast" />

    <Button
        android:id="@+id/btnImcShowView"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:text="IMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSumTwoNumbersView" />

    <Button
        android:id="@+id/btnShowJuegoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Time Fighter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImcShowView" />

    <Button
        android:id="@+id/btnpptView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Piedra-Papel-Tijera"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowJuegoView"
        app:layout_constraintVertical_bias="0.126" />

    <Button
        android:id="@+id/btnPrimerParcial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer Parcial"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="616dp" />

</androidx.constraintlayout.widget.ConstraintLayout>